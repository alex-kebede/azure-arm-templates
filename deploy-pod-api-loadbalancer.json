{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "loadBalancerName": {
      "type": "string",
      "defaultValue": "podapi",
      "metadata": {
        "description": "Name of the loadbalancer"
      }
    },
    "vmName": {
      "type": "array",
      "defaultValue": [
        "mgmt01",
        "mgmt02"
      ],
      "metadata": {
        "description": "Name of the VM",
      }
    },
    "subnetID": {
      "type": "string",
      "metadata": {
        "description": "Subnet ID"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "apiVersion": "2015-06-15",
      "name": "[concat(parameters('loadBalancerName'), 'LB')]",
      "type": "Microsoft.Network/loadBalancers",
      "location": "[resourceGroup().location]",
      "dependsOn": [],
      "properties": {
        "frontendIPConfigurations": [
          {
            "name": "loadBalancerFrontEnd1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[parameters('subnetID')]"
              },
            }
          }
        ],
        "backendAddressPools": [
          {
            "name": "loadBalancerBackEnd"
          }
        ],
        "loadBalancingRules": [
          {
            "name": "Rule1",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', concat(parameters('loadBalancerName'), 'LB')), '/frontendIpConfigurations/loadBalancerFrontEnd1')]"
              },
              "backendAddressPool": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', concat(parameters('loadBalancerName'), 'LB')), '/backendAddressPools/loadBalancerBackEnd')]"
              },
              "probe": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', concat(parameters('loadBalancerName'), 'LB')), '/probes/probe1')]"
              },
              "protocol": "Tcp",
              "frontendPort": "8000",
              "backendPort": "8000",
              "idleTimeoutInMinutes": 15
            }
          },
          {
            "name": "Rule2",
            "properties": {
              "frontendIPConfiguration": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', concat(parameters('loadBalancerName'), 'LB')), '/frontendIpConfigurations/loadBalancerFrontEnd1')]"
              },
              "backendAddressPool": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', concat(parameters('loadBalancerName'), 'LB')), '/backendAddressPools/loadBalancerBackEnd')]"
              },
              "probe": {
                "id": "[concat(resourceId('Microsoft.Network/loadBalancers', concat(parameters('loadBalancerName'), 'LB')), '/probes/probe2')]"
              },
              "protocol": "Tcp",
              "frontendPort": "8001",
              "backendPort": "8001",
              "idleTimeoutInMinutes": 15
            }
          }
        ],
        "probes": [
          {
            "name": "probe1",
            "properties": {
              "protocol": "Tcp",
              "port": "8000",
              "intervalInSeconds": 15,
              "numberOfProbes": 1
            }
          },
          {
            "name": "probe2",
            "properties": {
              "protocol": "Tcp",
              "port": "8001",
              "intervalInSeconds": 15,
              "numberOfProbes": 1
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2015-06-15",
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('vmName')[copyIndex()], 'NIC')]",
      "location": "[resourceGroup().location]",
      "copy": {
        "name": "lbniccopy",
        "count": "[length(parameters('vmName'))]"
      },
      "dependsOn": [
        "[concat('Microsoft.Network/loadBalancers/', parameters('loadBalancerName'), 'LB')]"
      ],
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "subnet": {
                "id": "[parameters('subnetID')]"
              },
              "loadBalancerBackendAddressPools": [
                {
                  "id": "[concat(resourceId('Microsoft.Network/loadBalancers', concat(parameters('loadBalancerName'), 'LB')),'/backendAddressPools/loadBalancerBackEnd')]"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}
