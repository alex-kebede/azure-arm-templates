{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
	"networkName": {
	    "metadata": {
		"description": "the name of the network to put the vm on"
	    },
	    "type": "string"
	},
	"storageAccount": {
	    "metadata": {
		"description": "storage account"
	    },
	    "type": "string"
	},
	"sshKey": {
	    "metadata": {
		"description": "admin ssh key"
	    },
	    "type": "string"
	},
	"subNet": {
	    "metadata": {
		"description": "subnet to assign vm to"
	    },
	    "type": "string"
	},
	"availabilitySet": {
	    "metadata": {
		"description": "Availability Set name to assign host to"
	    },
	    "type": "string"
	},
	"securityGroup": {
	    "metadata": {
		"description": "Security Group Name"
	    },
	    "type": "string"
	},
	"vmName": {
	    "metadata": {
		"description": "Name of the virtual machine"
	    },
	    "type": "string"
	},
	"customData": {
	    "metaData": {
		"description" : "Custom Data Script"
	    },
	    "type": "string"
	}
    },
    "variables": {
    },
    "resources": [
	{
	    "apiVersion": "2015-06-15",
	    "type": "Microsoft.Network/networkInterfaces",
	    "name": "[concat(parameters('vmName'), 'NIC1')]",
	    "location": "[resourceGroup().location]",
	    "properties": {
		"networkSecurityGroup":{
		    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('securityGroup'))]"
		},
		"ipConfigurations": [
		    {
			"name": "ipconfig1",
			"properties": {
			    "privateIPAllocationMethod": "Dynamic",
			    "subnet": {
				"id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('networkName')),'/subnets/default')]"
			    }
			}
		    }
		]
	    }
	},
	{
	    "apiVersion": "2015-06-15",
	    "type": "Microsoft.Network/networkInterfaces",
	    "name": "[concat(parameters('vmName'), 'NIC2')]",
	    "location": "[resourceGroup().location]",
	    "properties": {
		"networkSecurityGroup":{
		    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('securityGroup'))]"
		},
		"ipConfigurations": [
		    {
			"name": "ipconfig1",
			"properties": {
			    "privateIPAllocationMethod": "Dynamic",
			    "subnet": {
				"id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('networkName')),'/subnets/net1')]"
			    }
			}
		    }
		]
	    }
	},
	{
	    "apiVersion": "2015-06-15",
	    "type": "Microsoft.Network/networkInterfaces",
	    "name": "[concat(parameters('vmName'), 'NIC3')]",
	    "location": "[resourceGroup().location]",
	    "properties": {
		"networkSecurityGroup":{
		    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('securityGroup'))]"
		},
		"ipConfigurations": [
		    {
			"name": "ipconfig1",
			"properties": {
			    "privateIPAllocationMethod": "Dynamic",
			    "subnet": {
				"id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('networkName')),'/subnets/net2')]"
			    }
			}
		    }
		]
	    }
	},
	{
	    "apiVersion": "2015-06-15",
	    "type": "Microsoft.Network/networkInterfaces",
	    "name": "[concat(parameters('vmName'), 'NIC4')]",
	    "location": "[resourceGroup().location]",
	    "properties": {
		"networkSecurityGroup":{
		    "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('securityGroup'))]"
		},
		"ipConfigurations": [
		    {
			"name": "ipconfig1",
			"properties": {
			    "privateIPAllocationMethod": "Dynamic",
			    "subnet": {
				"id": "[concat(resourceId('Microsoft.Network/virtualNetworks', parameters('networkName')),'/subnets/net3')]"
			    }
			}
		    }
		]
	    }
	},
	{
	    "apiVersion": "2015-06-15",
	    "type": "Microsoft.Compute/virtualMachines",
	    "name": "[parameters('vmName')]",
	    "location": "[resourceGroup().location]",
	    "dependsOn": [
		"[concat('Microsoft.Network/networkInterfaces/', parameters('vmName'), 'NIC1')]",
		"[concat('Microsoft.Network/networkInterfaces/', parameters('vmName'), 'NIC2')]",
		"[concat('Microsoft.Network/networkInterfaces/', parameters('vmName'), 'NIC3')]",
		"[concat('Microsoft.Network/networkInterfaces/', parameters('vmName'), 'NIC4')]"
	    ],
	    "properties": {
		"hardwareProfile": {
		    "vmSize": "Standard_DS12"
		},
		"osProfile": {
		    "computername": "[parameters('vmName')]",
		    "adminUsername": "ubuntu",
		    "adminPassword": "",
		    "linuxConfiguration": {
			"disablePasswordAuthentication": "True",
			"ssh": {
			    "publicKeys": [
				{
				    "path": "/home/ubuntu/.ssh/authorized_keys",
				    "keyData": "[parameters('sshKey')]"
				} ]
			}
		    }
		},
		"storageProfile": {
		    "imageReference": {
			"publisher": "Canonical",
			"offer": "UbuntuServer",
			"sku": "14.04.2-LTS",
			"version": "latest"
		    },
		    "osDisk": {
			"name": "osdisk",
			"vhd": {
			    "uri": "[concat('http://', parameters('storageAccount'),'.blob.core.windows.net/root/', parameters('vmName'),'.vhd')]"
			},
			"caching": "ReadWrite",
			"createOption": "FromImage"
		    },
		    "dataDisks": [ {
			"name": "data",
			"diskSizeGB": "150",
			"lun": 0,
			"vhd": {
			    "uri": "[concat('http://', parameters('storageAccount'),'.blob.core.windows.net/data/', parameters('vmName'),'.vhd')]"
			},
			"createOption":"Empty"
		    } ]
		},
		"networkProfile": {
		    "networkInterfaces": [
			{
			    "properties": {
				"primary": true
			    },
			    "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'),'NIC1'))]"
			},
			{
			    "properties": {
				"primary": false
			    },
			    "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'),'NIC2'))]"
			},
			{
			    "properties": {
				"primary": false
			    },
			    "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'),'NIC3'))]"
			},
			{
			    "properties": {
				"primary": false
			    },
			    "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('vmName'),'NIC4'))]"
			} 
		    ]
		}
	    }
	}
    ],
    "outputs": {
    }
}
